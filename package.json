{
  "name": "omni-pos",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:all": "npx wrangler pages dev . --d1 DB --compatibility-date=2024-04-01",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "wrangler:update": "npm install --save-dev wrangler@latest",
    "deploy": "npm run build && npx wrangler pages deploy dist",
    "db:setup": "npx wrangler d1 execute pos --remote --command='SELECT 1'"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.5",
    "lucide-react": "^0.475.0",
    "recharts": "^2.15.0",
    "xlsx": "^0.18.5",
    "html-to-image": "^1.11.11"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "wrangler": "^3.50.0"
  }
}